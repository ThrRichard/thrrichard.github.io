{
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "es2015",
            "es2016",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020",
            "ESNext",
        ],
        "target": "ES2017",
        "outDir": "out",
        "allowJs": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "exclude": ["node_modules","dist_client","dist_server"]
}
